<div class="container">
    <div class='user_setting_dasboard'>
        <%now = Time.now%>
        <div class='user_setting_title'>
            <a>User Setting for <%=current_user.name%></a>
        </div>

        <div class="user_setting_tab_link">
            <ul class="nav">
                <li class="nav-item">
                    <%if @tab_id == "default" || @tab_id == "UserSettingPersonalID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                 
                    <a class="nav-link <%=active%>" href="<%=edit_user_path(current_user, tab_id: 'UserSettingPersonalID')%>"><i><%= bootstrap_icon "person", width: 24, height: 24%></i>Thông tin cá nhân</a>
                </li>
                <li class="nav-item">
                    <%if @tab_id == "UserSettingPrivacyID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=edit_user_path(current_user, tab_id: 'UserSettingPrivacyID')%>"><i><%= bootstrap_icon "shield", width: 20, height: 20%></i>Quyền riêng tư</a>
                </li>
                <li class="nav-item">
                    <%if @tab_id == "UserSettingNotiID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=edit_user_path(current_user, tab_id: 'UserSettingNotiID')%>"><i><%= bootstrap_icon "bell", width: 20, height: 20%></i>Thông báo</a>
                </li>
            </ul>
        </div>

        <div class="user_setting_tab_content">
            <%if @tab_id == "default" || @tab_id == "UserSettingPersonalID"%>
				<div class="user_setting_personal_tab">
					<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
						<div class="user_setting_form">
							<div class="user_setting_title">
								<h3>User</h3>
							</div>
							
							<div class="row">
								<div class="col-sm-8">
									<div class="user_setting_section">
										<div class="user_setting_content">
											<div class="user_setting_label">
												<a><%= f.label :name, "Tên đăng nhập", class: "user_setting_label_name" %></a>
											</div>

											<div class="user_setting_input">
												<%= f.text_field :name, class: "form-control", placeholder: "Nhập tên hoặc email của bạn" %>
											</div>
										</div>

										<div class="user_setting_content">
											<div class="user_setting_label">
												<a><%= f.label :email, "Địa chỉ email", class: "user_setting_label_name" %></a>
											</div>

											<div class="user_setting_input">
												<%= f.text_field :email, class: "form-control", placeholder: "Nhập tên hoặc email của bạn" %>
											</div>
										</div>

										<div class="user_setting_content">
											<div class="user_setting_label">
												<a><%= f.label :password, "Mật khẩu", class: "user_setting_label" %></a>
											</div>
											
											<div class="user_setting_input">
												<%= f.password_field :password, class: "form-control", placeholder: "Nhập mật khẩu của bạn" %>
											</div>
										</div>

										<div class="user_setting_content">
											<div class="user_setting_label">
												<a><%= f.label :password_confirmation, "Xác nhận mật khẩu", class: "user_setting_label" %></a>
											</div>

											<div class="user_setting_input">
												<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Nhập lại mật khẩu" %>
											</div>
										</div>
									</div>
									
									<div class="user_setting_section">
										<div class="user_setting_content">
											<div class="user_setting_label">
												<a><%= f.label :phone, "Số điện thoại", class: "user_setting_label_name" %></a>
											</div>

											<div class="user_setting_input">
												<%= f.text_field :phone, class: "form-control", placeholder: "Nhập số điện thoại của bạn" %>
											</div>
										</div>

										<div class="user_setting_content">
											<div class="user_setting_label">
												<a><%= f.label :address, "Địa chỉ liên hệ", class: "user_setting_label_name" %></a>
											</div>

											<div class="user_setting_input">
												<%= f.text_field :address, class: "form-control", placeholder: "Nhập địa chỉ liên hệ của bạn" %>
											</div>
										</div>
									</div>
									
									<div class="user_setting_submit">
										<%= f.submit "Lưu thay đổi", class: "user_setting_form_submit" %>
									</div>
								</div>
							</div>
						</div>
					<%end%>
				</div>
            <%end%>

            <%if @tab_id == "UserSettingPrivacyID"%>
                <div class="user_setting_privacy_tab">
                    <div class="user_setting_privacy_label">
                        <strong>Việc làm bạn đang theo dõi</strong>
                    </div>
                </div>
            <%end%>

            <%if @tab_id == "UserSettingNotiID"%>
				<div class="user_setting_noti_tab">
				</div>
            <%end%>
        </div>
    </div>
</div>