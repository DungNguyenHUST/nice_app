<%if !@preview_mode == true%>
  $('#post_index_<%=@post.id%>').append('<%= j render partial: "posts/preview_comment", locals: {post: @post} %>');
<%else%>
  // Append new data
  <%@post_comments.each do |post_comment|%>
    $("<%=j render post_comment %>").appendTo($("#post_show_comment_index_<%=@post.id%>"));
  <%end%>

  <%remain_item = @post_comments.total_count - (@post_comments.current_page * 10)%>
  <%remain_item = "Xem thêm" + " " + remain_item.to_s + " " + "bình luận khác"%>

  // Update pagination link
  <% if @post_comments.last_page? %>
    $('#post_comment_pagination').remove();
  <% else %>
    $('#post_comment_pagination').html("<%=j link_to_next_page(@post_comments, remain_item, :remote => true) %>");
  <% end %>
<%end%>