<div class='tag_index_container'>
	<div class='container'>
		<div class='tag_index_new'>
			<%= button_to new_tag_path, method: :get do%>
                Thêm tag mới
            <%end%>
		</div>
		<div class='row'>
		    <%@tags.each do |tag|%>
				<div class='col-sm-3 col-nopadding'>
					<%= render :partial => 'tags/tag', :locals => {:mini_tyle => false}, :object => tag %>
		    	</div>
		    <%end%>
			<div id="paginate">
				<%= paginate @tags, window: 1, outer_window: 1%>
			</div>
		</div>
	</div>
</div>