<div class="user_notification_block">
    <div class="user_notification_left">
        <div class="user_notification_date">
            <a><%=user_notification.created_at.strftime("%B %d, %Y")%></a>
        </div>
    </div>

    <div class="user_notification_right">
        <div class="user_notification_user">
            <%if find_trigger_user(user_notification).present?%>
                <a> <%= find_trigger_user(user_notification).name%>
                    <%if user_notification.noti_type.to_s == "PostVote"%>
                        <span> đã bình chọn cho bài viết của bạn (+1) </span>
                    <%elsif user_notification.noti_type.to_s == "PostUnvote"%>
                        <span> đã không bình chọn cho bài viết của bạn </span>
                    <%elsif user_notification.noti_type.to_s == "PostComment"%>
                        <span> đã bình luận về bài viết của bạn </span>
                    <%elsif user_notification.noti_type.to_s == "PostReplyComment"%>
                        <span> đã trả lời bình luận cảu bạn </span>
                    <%else%>
                        <span> đã trả lời trong chủ đề </span>
                    <%end%>
                </a>
            <%end%>
        </div>

        <div class="user_notification_title">
            <a><%= link_to user_notification.title, user_notification.original_url, class: "notify_label" %></a>
        </div>

        <div class="user_notification_content">
            <a><%=truncate(strip_tags(user_notification.content), length: 300)%></a>
        </div>
    </div>
</div>