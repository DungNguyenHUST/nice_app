<div class="home_index_container">
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <div class='home_left_block'>
                    <div class='home_left_view_menu'>
                        <div class='home_left_view_menu_section'>
                            <%= button_to pages_path, method: :get do%>
                                <i><%= bootstrap_icon "house", width: 24, height: 24 %></i>
                                <a>Trang chủ</a>
                            <%end%>
                        </div>
                        <div class='home_left_view_menu_section'>
                            <%= button_to tags_path, method: :get do%>
                                <i><%= bootstrap_icon "pip", width: 24, height: 24 %></i>
                                <a>Khám phá</a>
                            <%end%>
                        </div>
                        <div class='home_left_view_menu_section'>
                            <%= button_to pages_path, method: :get do%>
                                <i><%= bootstrap_icon "card-list", width: 24, height: 24 %></i>
                                <a>Reading list</a>
                            <%end%>
                        </div>
                        <%if user_signed_in?%>
                            <div class='home_left_view_menu_section'>
                                <%= button_to user_path(current_user), method: :get do%>
                                    <i><%= bootstrap_icon "person-square", width: 24, height: 24 %></i>
                                    <a>Cá nhân</a>
                                <%end%>
                            </div>
                        <%end%>
                    </div>

                    <div class='home_left_my_tag'>
                        <%if user_signed_in?%>
                            <div class='home_left_my_tag_title'>
                                <a>My Tag</a>
                            </div>
                            <%@tags.each do |tag|%>
                                <div class="home_left_my_tag_block">
                                    <a># <%= link_to (tag.name), tag_path(tag) %></a>
                                </div>
                            <%end%>
                        <%else%>
                            <div class='home_left_my_tag_title'>
                                <a>Gợi ý theo dõi</a>
                            </div>
                            <%@tags.each do |tag|%>
                                <div class="home_left_my_tag_block">
                                    <a># <%= link_to (tag.name), tag_path(tag) %></a>
                                </div>
                            <%end%>
                        <%end%>
                    </div>
                </div>
            </div>
            <div class="col-sm-7">
                <div class='home_middle_block'>
                    <%if user_signed_in?%>
                        <div class="home_new_post">
                            <%if current_user.avatar?%>
                                <div class="home_new_post_user_avatar">
                                    <%= link_to (image_tag(current_user.avatar.url)), image_path(url_for(current_user.avatar.url)), rel: "gallery" , :href => user_path(current_user)%>
                                </div>
                            <%else%>
                                <div class="home_new_post_user_avatar">
                                    <%= link_to (image_tag("default-user.png")), image_path(url_for("default-user.png")), rel: "gallery" , :href => user_path(current_user)%>
                                </div>
                            <%end%>
                            <div class="home_new_post_editor">
                                <%= button_to new_post_path(tab_id: 'PostID'), method: :get do%>
                                    <a><%=current_user.name%>, bạn đang nghĩ gì?</a>
                                <%end%>
                            </div>
                        </div>
                    <%end%>
                    <div class="home_post_sort">
                        <div class="home_post_tab_link">
                            <ul class="nav">
                                <li class="nav-item">
                                    <%if @tab_id == "default" || @tab_id == "PostHotID"%>
                                        <%active = "active"%>
                                    <%else%> 
                                        <%active = ""%>
                                    <%end%>
                                    <a class="nav-link <%=active%>" href="<%=pages_path(tab_id: 'PostHotID')%>"><i><%= bootstrap_icon "bar-chart", width: 18, height: 18%></i>Hot </a>
                                </li>
                                <li class="nav-item">
                                    <%if @tab_id == "PostNewID"%>
                                        <%active = "active"%>
                                    <%else%> 
                                        <%active = ""%>
                                    <%end%>
                                    <a class="nav-link <%=active%>" href="<%=pages_path(tab_id: 'PostNewID')%>"><i><%= bootstrap_icon "lightning", width: 18, height: 18%></i>Mới nhất </a>
                                </li>
                                <li class="nav-item">
                                    <%if @tab_id == "PostTopID"%>
                                        <%active = "active"%>
                                    <%else%> 
                                        <%active = ""%>
                                    <%end%>
                                    <a class="nav-link <%=active%>" href="<%=pages_path(tab_id: 'PostTopID')%>"><i><%= bootstrap_icon "shift", width: 18, height: 18%></i>Top </a>
                                </li>
                                <li class="nav-item">
                                    <%if @tab_id == "PostTrendID"%>
                                        <%active = "active"%>
                                    <%else%> 
                                        <%active = ""%>
                                    <%end%>
                                    <a class="nav-link <%=active%>" href="<%=pages_path(tab_id: 'PostTrendID')%>"><i><%= bootstrap_icon "graph-up", width: 18, height: 18%></i>Trending </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="home_post_tab_content">
                        <%if @tab_id == "default" || @tab_id == "PostHotID"%>
                            <%@posts.each do |post|%>
                                <%= render post%>
                            <%end%>
                        <%end%>

                        <%if @tab_id == "PostNewID"%>
                            <%@posts.reverse.each do |post|%>
                                <%= render post%>
                            <%end%>
                        <%end%>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class='home_right_block'>
                    <div class='home_right_title'>
                        <a>Trending hôm nay</a>
                    </div>

                    <%@posts.each do |post|%>
                        <div class='home_right_content'>
							<div class='home_right_post_block'>
                            	<a><%= link_to (post.title), post_path(post) %></a>
							</div>
							<div class='home_right_tag_block'>
								<%post.tags.each do |tag|%>
									<%= button_to tag_path(tag), method: :get do %>
										<a><span>#</span><%=tag.name%></a>
									<%end%>
								<%end%>
							</div>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>
